{
  "printWidth": 120,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "quoteProps": "consistent",
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.yml", "*.md", "*.mdx", ".*rc"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
